{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      "**/*.docx", "**/*.html", "**/*.png",
      {
        "include": "generated/**/*",
        "outDir": "dist",
        "watchAssets": true
      }
    ],
    "plugins": ["@nestjs/swagger"],
    "deleteOutDir": true,
    "watchAssets": true
  }
}
